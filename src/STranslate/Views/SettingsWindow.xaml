<Window
    x:Class="STranslate.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvt="clr-namespace:STranslate.Converters"
    xmlns:control="clr-namespace:STranslate.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:STranslate.Views.Pages"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:STranslate.ViewModels"
    x:Name="STSettingsWindow"
    Title="{DynamicResource Settings}"
    Width="1000"
    Height="760"
    MinWidth="940"
    MinHeight="600"
    control:SnackbarBehavior.EnableSnackbar="True"
    d:DataContext="{d:DesignInstance Type=vm:SettingsWindowViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:TitleBar.Height="48"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Icon="/Resources/app.ico"
    KeyDown="OnKeyDown"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding
            Key="Esc"
            Command="{Binding CancelCommand}"
            CommandParameter="{Binding ElementName=STSettingsWindow}" />
    </Window.InputBindings>

    <Grid>
        <Border
            Height="{Binding ElementName=RootNavigation, Path=CompactPaneLength}"
            Margin="20,0,0,0"
            VerticalAlignment="Top"
            Background="Transparent"
            IsHitTestVisible="True">
            <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="10">
                <Image Width="20" Source="pack://application:,,,/Resources/app.ico" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    Style="{DynamicResource CaptionTextBlockStyle}"
                    Text="{DynamicResource Settings}"
                    TextWrapping="NoWrap" />
            </ikw:SimpleStackPanel>
        </Border>
        <ui:NavigationView
            x:Name="RootNavigation"
            Margin="6,0"
            AlwaysShowHeader="False"
            Canvas.ZIndex="0"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="False"
            IsPaneToggleButtonVisible="False"
            IsTabStop="False"
            IsTitleBarAutoPaddingEnabled="False"
            Loaded="OnNaviLoaded"
            OpenPaneLength="240"
            PaneDisplayMode="Left"
            SelectionChanged="OnNaviSelectionChanged">
            <ui:NavigationView.Resources>
                <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
                <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness>
                <Thickness x:Key="NavigationViewContentGridBorderThickness">0</Thickness>
                <CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</CornerRadius>
                <Thickness x:Key="NavigationViewHeaderMargin">20,0,0,0</Thickness>
                <sys:Double x:Key="NavigationViewItemOnLeftIconBoxHeight">24</sys:Double>
            </ui:NavigationView.Resources>
            <ui:NavigationView.PaneCustomContent>
                <Grid Margin="0,49,0,25" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Image
                        Width="50"
                        Height="50"
                        Source="/Resources/app.ico" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="0,12,0,0"
                        VerticalAlignment="Center"
                        Text="STranslate"
                        TextAlignment="Center" />
                </Grid>
            </ui:NavigationView.PaneCustomContent>
            <ui:NavigationView.MenuItems>

                <ui:NavigationViewItem Content="{DynamicResource General}" Tag="GeneralPage">
                    <ui:NavigationViewItem.Icon>
                        <ui:BitmapIcon ShowAsMonochrome="False" UriSource="/Resources/settings.png" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="{DynamicResource Services}" IsExpanded="True">
                    <ui:NavigationViewItem.Icon>
                        <ui:BitmapIcon ShowAsMonochrome="False" UriSource="/Resources/services.png" />
                    </ui:NavigationViewItem.Icon>
                    <ui:NavigationViewItem.MenuItems>
                        <ui:NavigationViewItem Content="{DynamicResource Translate}" Tag="TranslatePage">
                            <ui:NavigationViewItem.Icon>
                                <ui:BitmapIcon ShowAsMonochrome="False" UriSource="/Resources/translate.png" />
                            </ui:NavigationViewItem.Icon>
                        </ui:NavigationViewItem>
                        <ui:NavigationViewItem Content="{DynamicResource Ocr}" Tag="OcrPage">
                            <ui:NavigationViewItem.Icon>
                                <ui:BitmapIcon ShowAsMonochrome="False" UriSource="/Resources/ocr.png" />
                            </ui:NavigationViewItem.Icon>
                        </ui:NavigationViewItem>
                        <ui:NavigationViewItem Content="{DynamicResource Tts}" Tag="TtsPage">
                            <ui:NavigationViewItem.Icon>
                                <ui:BitmapIcon ShowAsMonochrome="False" UriSource="/Resources/tts.png" />
                            </ui:NavigationViewItem.Icon>
                        </ui:NavigationViewItem>
                        <ui:NavigationViewItem Content="{DynamicResource Vocabulary}" Tag="VocabularyPage">
                            <ui:NavigationViewItem.Icon>
                                <ui:BitmapIcon ShowAsMonochrome="False" UriSource="/Resources/vocabulary.png" />
                            </ui:NavigationViewItem.Icon>
                        </ui:NavigationViewItem>
                    </ui:NavigationViewItem.MenuItems>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="{DynamicResource Standalone}" Tag="StandalonePage">
                    <ui:NavigationViewItem.Icon>
                        <ui:BitmapIcon ShowAsMonochrome="False" UriSource="/Resources/windows.png" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="{DynamicResource Plugins}" Tag="PluginPage">
                    <ui:NavigationViewItem.Icon>
                        <ui:BitmapIcon ShowAsMonochrome="False" UriSource="/Resources/plugins.png" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="{DynamicResource Hotkeys}" Tag="HotkeyPage">
                    <ui:NavigationViewItem.Icon>
                        <ui:BitmapIcon ShowAsMonochrome="False" UriSource="/Resources/keyboard.png" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="{DynamicResource Network}" Tag="NetworkPage">
                    <ui:NavigationViewItem.Icon>
                        <ui:BitmapIcon ShowAsMonochrome="False" UriSource="/Resources/network.png" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="{DynamicResource About}" Tag="AboutPage">
                    <ui:NavigationViewItem.Icon>
                        <ui:BitmapIcon ShowAsMonochrome="False" UriSource="/Resources/info.png" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

            </ui:NavigationView.MenuItems>

            <ui:Frame x:Name="RootFrame" />
        </ui:NavigationView>
    </Grid>
</Window>