<Window
    x:Class="STranslate.Views.PromptEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvt="clr-namespace:STranslate.Converters"
    xmlns:control="clr-namespace:STranslate.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:STranslate.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:STranslate.ViewModels"
    Title="{DynamicResource EditPrompt}"
    Width="900"
    Height="650"
    MinWidth="800"
    MinHeight="600"
    d:DataContext="{d:DesignInstance Type=vm:PromptEditViewModel,
                                     IsDesignTimeCreatable=False}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.InputBindings>
        <KeyBinding
            Key="Esc"
            Command="{Binding CancelCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
        <KeyBinding
            Key="S"
            Command="{Binding SaveCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            Modifiers="Ctrl" />
    </Window.InputBindings>

    <Grid Margin="24,40,24,24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  左侧：Prompt 列表  -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  标题  -->
            <Border
                Grid.Row="0"
                Margin="0,0,0,16"
                Padding="12,8"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="6">
                <TextBlock
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Text="{DynamicResource PromptList}" />
            </Border>

            <!--  Prompt 操作按钮  -->
            <ikw:SimpleStackPanel
                Grid.Row="1"
                Margin="0,0,0,12"
                Orientation="Horizontal"
                Spacing="6">
                <Button
                    Padding="12,6"
                    Command="{Binding AddPromptCommand}"
                    Content="{DynamicResource Add}"
                    FontSize="{DynamicResource {x:Static ui:ThemeKeys.CaptionTextBlockFontSizeKey}}"
                    Style="{StaticResource AccentButtonStyle}" />
                <Button
                    Padding="12,6"
                    Command="{Binding CopyPromptCommand}"
                    Content="{DynamicResource Copy}"
                    FontSize="{DynamicResource {x:Static ui:ThemeKeys.CaptionTextBlockFontSizeKey}}" />
                <Button
                    Padding="12,6"
                    Command="{Binding RemovePromptCommand}"
                    Content="{DynamicResource Delete}"
                    FontSize="{DynamicResource {x:Static ui:ThemeKeys.CaptionTextBlockFontSizeKey}}" />
            </ikw:SimpleStackPanel>

            <!--  Prompt 列表  -->
            <Border
                Grid.Row="2"
                Background="{DynamicResource LayerFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="6">
                <ListBox
                    Margin="4"
                    dd:DragDrop.IsDragSource="True"
                    dd:DragDrop.IsDropTarget="True"
                    Background="Transparent"
                    ItemsSource="{Binding Prompts}"
                    SelectedItem="{Binding SelectedPrompt}">
                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource {x:Type ListBoxItem}}" TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="12,8" />
                            <Setter Property="Margin" Value="2" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="ui:ControlHelper.CornerRadius" Value="4" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="40" />
                                </Grid.ColumnDefinitions>
                                <control:EditableTextBlock
                                    Grid.Column="0"
                                    Margin="5,0,0,0"
                                    FontSize="13"
                                    Text="{Binding Name}"
                                    ToolTipService.ToolTip="{Binding Name}" />
                                <ui:ToggleSwitch
                                    Grid.Column="1"
                                    IsOn="{Binding IsEnabled}"
                                    OffContent=""
                                    OnContent="" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>

        <GridSplitter
            Grid.Row="0"
            Grid.Column="1"
            Width="8"
            HorizontalAlignment="Stretch"
            Background="Transparent" />

        <!--  右侧：选中 Prompt 的编辑区域  -->
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Prompt 基本信息  -->
            <Border
                Grid.Row="0"
                Margin="0,0,0,16"
                Padding="12,8"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="6">
                <TextBlock
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Text="{DynamicResource PromptDetails}" />
            </Border>

            <!--  提示项操作按钮  -->
            <ikw:SimpleStackPanel
                Grid.Row="1"
                Margin="0,0,0,12"
                Orientation="Horizontal"
                Spacing="10">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Text="{DynamicResource PromptItemManagement}" />
                <Button
                    Padding="12,6"
                    Command="{Binding AddPromptItemCommand}"
                    Content="{DynamicResource AddPromptItem}"
                    FontSize="{DynamicResource {x:Static ui:ThemeKeys.CaptionTextBlockFontSizeKey}}"
                    Style="{StaticResource AccentButtonStyle}" />
                <Button
                    Padding="12,6"
                    Command="{Binding RemovePromptItemCommand}"
                    Content="{DynamicResource RemovePromptItem}"
                    FontSize="{DynamicResource {x:Static ui:ThemeKeys.CaptionTextBlockFontSizeKey}}" />
            </ikw:SimpleStackPanel>

            <!--  提示项编辑区域  -->
            <Grid Grid.Row="2" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  提示项列表  -->
                <Border
                    Grid.Column="0"
                    Background="{DynamicResource LayerFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="6">
                    <ListBox
                        Margin="4"
                        dd:DragDrop.IsDragSource="True"
                        dd:DragDrop.IsDropTarget="True"
                        Background="Transparent"
                        ItemsSource="{Binding PromptItems}"
                        SelectedItem="{Binding SelectedPromptItem}">
                        <ListBox.ItemContainerStyle>
                            <Style BasedOn="{StaticResource {x:Type ListBoxItem}}" TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="12,8" />
                                <Setter Property="Margin" Value="2" />
                                <Setter Property="ui:ControlHelper.CornerRadius" Value="4" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="Medium"
                                    Text="{Binding Role}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <GridSplitter
                    Grid.Column="1"
                    Width="8"
                    HorizontalAlignment="Stretch"
                    Background="Transparent" />

                <!--  提示项内容编辑  -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  角色选择  -->
                    <Border
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        Padding="12,10"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="6">
                        <ikw:SimpleStackPanel Spacing="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"
                                    FontWeight="Medium"
                                    Text="{DynamicResource Role}" />
                                <ComboBox
                                    Grid.Column="1"
                                    Padding="10,6"
                                    FontSize="13"
                                    IsEnabled="{Binding SelectedPromptItem, Converter={cnvt:NullToBoolInverseConverter}}"
                                    ItemsSource="{Binding Roles}"
                                    Text="{Binding SelectedPromptItem.Role, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <!--  使用说明  -->
                            <Border
                                Padding="12,8"
                                Background="{DynamicResource SystemFillColorAttentionBackgroundBrush}"
                                BorderBrush="{DynamicResource SystemFillColorAttentionBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <ikw:SimpleStackPanel Spacing="4">
                                    <TextBlock
                                        FontSize="{DynamicResource {x:Static ui:ThemeKeys.CaptionTextBlockFontSizeKey}}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource SystemFillColorAttentionBrush}"
                                        Text="{DynamicResource CustomPromptInstructionTitle}" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        TextWrapping="Wrap">
                                        <Run Text="{DynamicResource CustomPromptInstructionDesc1}" />
                                        <LineBreak />
                                        <Run FontWeight="SemiBold" Text="{DynamicResource CustomPromptInstructionDesc2}" />
                                        <Run Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" Text="$source" />
                                        <Run Text="{DynamicResource CustomPromptInstructionDesc3}" />
                                        <Run Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" Text="$target" />
                                        <Run Text="{DynamicResource CustomPromptInstructionDesc4}" />
                                        <Run Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" Text="$content" />
                                        <Run Text="{DynamicResource CustomPromptInstructionDesc5}" />
                                    </TextBlock>
                                </ikw:SimpleStackPanel>
                            </Border>
                        </ikw:SimpleStackPanel>
                    </Border>

                    <!--  内容编辑  -->
                    <Border
                        Grid.Row="1"
                        Background="{DynamicResource LayerFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="6">
                        <TextBox
                            Padding="12"
                            AcceptsReturn="True"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="13"
                            IsEnabled="{Binding SelectedPromptItem, Converter={cnvt:NullToBoolInverseConverter}}"
                            Text="{Binding SelectedPromptItem.Content, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!--  底部按钮  -->
        <ikw:SimpleStackPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="12">
            <Button
                MinWidth="90"
                Padding="16,8"
                Command="{Binding SaveCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="{DynamicResource Save}"
                FontSize="13"
                FontWeight="Medium"
                IsDefault="True"
                Style="{StaticResource AccentButtonStyle}" />
            <Button
                MinWidth="90"
                Padding="16,8"
                Command="{Binding CancelCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="{DynamicResource Cancel}"
                FontSize="13"
                IsCancel="True" />
        </ikw:SimpleStackPanel>
    </Grid>
</Window>